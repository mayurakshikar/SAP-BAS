<mvc:View controllerName="index.index.controller.detail" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                    <Input placeholder="Enter Your Name" width="50%" value="{/recipient/name}" 
                    description=" Hello {/recipient/name}" valueLiveUpdate="true"></Input>
                    <Button text="Go to next page" width="25%" press="OnPress"></Button>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
